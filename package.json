{
  "name": "attrobj",
  "version": "1.0.0",
  "description": "Creates an object based on element attributes",
  "main": "lib/attrobj.js",
  "scripts": {
    "build": "browserify lib/attrobj.js -t [ babelify --presets [ es2015 ] ] -o dist/attrobj.js -s attrobj",
    "build:test": "browserify test/attrobj.test.js -t [ babelify --presets [ es2015 ] ] -o test/dist/test.js",
    "dev": "concurrently -r 'nswatch' 'static-server -p 8000'",
    "lint": "eslint . --ignore-pattern dist"
  },
  "watch": {
    "lib/*.js": [
      "lint",
      "build",
      "build:test"
    ],
    "test/*.js": [
      "lint",
      "build:test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firstandthird/attrobj.git"
  },
  "keywords": [
    "attributes",
    "browser",
    "dom"
  ],
  "author": "First+Third",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firstandthird/attrobj/issues"
  },
  "homepage": "https://github.com/firstandthird/attrobj#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "concurrently": "^3.1.0",
    "eslint": "^3.9.1",
    "eslint-config-firstandthird": "^3.1.0",
    "eslint-plugin-import": "^2.1.0",
    "nswatch": "^0.2.0",
    "static-server": "^2.0.3",
    "tape": "^4.6.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": "firstandthird"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
